set z = (soft hard full)
set el = (0.5 2.0 0.5)
set eu = (2.0 8.0 8.0)
set nl = (500 2000 500)
set nu = (2000 8000 8000)
set n = (500-2000 2000-8000 500-8000)
set nn = (500:2000 2000:8000 500:8000)
set nd = (0.5,2.0 2.0,8.0)
set ndL = (0.5 2.0)
set ndH = (2.0 8.0)
set nq = (0.5:2.0 2.0:8.0)
set nh = (0.58 1.93 3.71)
set i = 2227+2452


cd /home/rumbaugh/ChandraData/0910/master/
foreach j (1 2 3)
cd regions
rm bkg*$z[$j]*reg
mkBgRegScript sources.$i.$z[$j].1e6.b1.1-16.wexp20.mod.reg 2 bkg.$i.$z[$j].reg
mkSubSuperBgRegScript sources.$i.$z[$j].1e6.b1.1-16.wexp20.mod.reg bkg.$i.$z[$j].reg bkg_sub.$i.$z[$j].reg
sed -i 's/[0-9]e-[0-9][0-9]/0/g' bkg_sub.$i.$z[$j].reg
sed -i 's/[0-9]e-[0-9][0-9]/0/g' sources.$i.$z[$j].1e6.b1.1-16.wexp20.mod.reg
cd ..
set num = `stats -v max < acis$i.expmap_$z[$j].fits`
dmimgcalc acis$i.img.$n[$j].fits acis$i.expmap_$z[$j].fits acis$i.img.$n[$j].vig_corr.fits div weight=$num clob+
dmfilth infile=acis$i.img.$n[$j].vig_corr.fits outfile=acis$i.img.$n[$j].vig_corr.nops.fits method=POISSON srclist=@./regions/sources.$i.$z[$j].1e6.b1.1-16.wexp20.mod.reg bkglist=@./regions/bkg_sub.$i.$z[$j].reg randseed=0 clob+
aconvolve acis$i.img.$n[$j].vig_corr.nops.fits conv.2227+2452.$z[$j].r_32.4.fits "file:beta_model.r0_32.369.alpha_1.5.fits" edges=wrap method=fft clob+

end
end