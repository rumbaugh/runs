echo ' '
echo 'Needs to be run on Gallifrey'
echo ' '
declare -a z=(soft hard full)
declare -a el=(0.5 2.0 0.5)
declare -a eu=(2.0 8.0 8.0)
declare -a nl=(500 2000 500)
declare -a nu=(2000 8000 8000)
declare -a n=(500-2000 2000-8000 500-8000)
declare -a nn=(500:2000 2000:8000 500:8000)
declare -a nd=(0.5,2.0 2.0,8.0)
declare -a ndL=(0.5 2.0)
declare -a ndH=(2.0 8.0)
declare -a nq=(0.5:2.0 2.0:8.0)
declare -a nh=(0.58 1.93 3.71)
declare -a cid=(2227+2452 3181+4987 927+1708)
declare -a cida=(2227 3181 927)
declare -a cidb=(2452 4987 1708)


for i in 0 1 2
do
cd /home/rumbaugh/Chandra/${cid[$i]}
punlearn ardlib
acis_set_ardlib acis${cid[$i]}.bpix.fits.gz
RA="`dmkeypar ../acis${cida[$i]}/acis${cida[$i]}.evt2.500-2000.fits RA_PNT echo+`"
DEC="`dmkeypar ../acis${cida[$i]}/acis${cida[$i]}.evt2.500-2000.fits DEC_PNT echo+`"
dmcoords acis$i.evt2.500-2000.fits asol=acis$i.asol.fits.gz option=cel ra=$RA dec=$DEC verbose=0
RA="`pget dmcoords ra`"
DEC="`pget dmcoords dec`"
echo -e "# Region file format: DS9 version 4.1"\\n"# Filename: acis${cid[$i]}.img.500-2000.fits"\\n"global color=green dashlist=8 3 width=1 font=\"helvetica 10 normal roman\" select=1 highlite=1 dash=0 fixed=0 edit=1 move=1 delete=1 include=1 source=1"\\nfk5\\ncircle\($RA,$DEC,20\"\) | tee regions/acis${cid[$i]}.pointing.reg
for j in 0 1
do
punlearn specextract
specextract infile="../${cida[$i]}/acis${cida[$i]}.evt2.${n[$j]}.fits[sky=region(./regions/acis${cid[$i]}.pointing.reg)],../${cidb[$i]}/acis${cidb[$i]}.evt2.${n[$j]}.fits[sky=region(./regions/acis${cid[$i]}.pointing.reg)]" outroot=spec_${cid[$i]}\_${z[$j]} grouptype=NUM_CTS binspec=15 energy_wmap=${nn[$j]} weight_rmf=no combine=yes clob+
done
done