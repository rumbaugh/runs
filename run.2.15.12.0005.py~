    print '%s - 0.5 Mpc\nP_2/P_0: %E\nP_3/P_0: %E\nP_4/P_0: %E\n%s - 0.25 Mpc\nP_2/P_0: %E\nP_3/P_0: %E\nP_4/P_0: %E\n\n'%(names[i],tp2/tp0,tp3/tp0,tp4/tp0,names[i],tp22/tp02,tp32/tp02,tp42/tp02)
